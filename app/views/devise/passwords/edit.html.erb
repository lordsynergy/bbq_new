<h2 class="text-center mb-3"><%= t('.change_your_password') %></h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-floating mb-3">
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: 'password' %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>
        <%= f.label :password, t('.new_password'), for: "floatingPassword" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: 'password' %>
        <%= f.label :password_confirmation, t('.confirm_new_password'), for: "floatingPassword" %>
      </div>

      <div class="actions">
        <%= f.submit t('.change_my_password'), class: 'btn btn-info mb-3' %>
      </div>
<% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
