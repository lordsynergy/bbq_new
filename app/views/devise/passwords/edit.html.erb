<h2 class="text-center mb-3">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-floating mb-3">
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: t('views.devise.password') %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.label :password, t('.new_password'), for: "floatingPassword" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: t('views.devise.password') %>
        <%= f.label :password_confirmation, t('.confirm_new_password'), for: "floatingPassword" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password" , class: 'btn btn-info'%>
      </div>
<% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>