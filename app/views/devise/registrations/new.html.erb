<h3 class='text-center mb-3'><%= t('.sign_up') %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    <div class='col-md-6'>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-floating mb-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
                         placeholder: t('views.devise.name'), id: "floatingInput", class: "form-control" %>
        <%= f.label :name, for: "floatingInput" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          placeholder: t('views.devise.email'), id: "floatingInput", class: "form-control" %>
        <%= f.label :email, for: "floatingInput" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: t('views.devise.password') %>
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %>

        <%= f.label :password, for: "floatingPassword" %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "form-control", id: "floatingPassword", placeholder: t('views.devise.password') %>
        <%= f.label :password_confirmation, for: "floatingPassword" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit t('.sign_up'), class: 'btn btn-info' %>
      </div>
<% end %>
      <%= render "devise/shared/links" %>
     </div>
  </div>
