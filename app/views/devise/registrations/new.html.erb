<h3 class='text-center mb-3'><%= t('.sign_up') %></h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row justify-content-center">
    <div class='col-md-6'>
      <%= render "devise/shared/error_messages", resource: resource %>

      <form>
        <div class="form-group mb-3">
          <%= f.text_field :name, autofocus: true,
                           placeholder: t('views.devise.name'), class: "form-control form-control-lg" %>
        </div>

        <div class="form-group mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            placeholder: t('views.devise.email'), class: "form-control form-control-lg" %>
        </div>

        <div class="form-group mb-3">
          <% placeholder_pass = t('views.devise.password') %>
          <% if @minimum_password_length %>
            <% placeholder_pass += " #{t('devise.shared.minimum_password_length', count: @minimum_password_length)}" %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: placeholder_pass,
                               class: "form-control form-control-lg" %>
        </div>

        <div class="form-group mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               placeholder: t('views.devise.password_confirm'), class: "form-control form-control-lg" %>
        </div>

        <div class="actions mb-3">
          <%= f.submit t('.sign_up'), class: 'btn btn-info' %>
        </div>
      </form>
<% end %>
      <%= render "devise/shared/links" %>
     </div>
  </div>
